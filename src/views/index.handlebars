{{#if books}}
<h1>Books</h1>
<div>
{{#each books}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.bookmark}} of {{this.totalPages}} pages ({{percentCompleted}}%)</p>
    <form action="/record" method="post">
      <input type="number" name="page" id="page">
      <input type="hidden" name="book" id="book" value="{{{this.id}}}">
      <input type="submit" value="Bookmark">
    </form>
  </div>
{{/each}}
</div>
{{/if}}
<div>The bot is working! Tag: {{{tag}}}</div>
